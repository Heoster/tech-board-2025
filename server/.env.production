NODE_ENV=production
PORT=8000

# Database
DATABASE_PATH=./database/mcq_system_fixed.db

# Security
JWT_SECRET=tech-board-2025-production-jwt-secret-key-ultra-secure-2024
ADMIN_SECRET=your-super-secure-admin-secret-change-in-production

# CORS
CORS_ORIGIN=https://tech-board.up.railway.app

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Cache Settings
CACHE_TTL=3600
ENABLE_REDIS_CACHE=false

# Performance
ENABLE_COMPRESSION=true
ENABLE_HELMET=true
LOG_LEVEL=error

# Features
ENABLE_ANALYTICS=true
ENABLE_MONITORING=true
ENABLE_BACKGROUND_SYNC=true

# Railway specific
RAILWAY_STATIC_URL=https://tech-board.up.railway.app
RAILWAY_PUBLIC_DOMAIN=tech-board.up.railway.app